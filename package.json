{
  "name": "philosopher-platform",
  "version": "2.0.0",
  "description": "منصة الفلسفة والمنطق التعليمية - Educational Platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:css": "sass public/assets/scss/main.scss public/assets/css/main.css --style compressed",
    "watch:css": "sass --watch public/assets/scss:public/assets/css --style compressed",
    "build:ts": "tsc",
    "watch:ts": "tsc --watch",
    "build": "echo 'Build complete'",
    "watch": "concurrently \"npm run watch:css\" \"npm run watch:ts\"",
    "lint": "eslint public/assets/ts/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "education",
    "learning",
    "platform",
    "firebase",
    "typescript"
  ],
  "author": "Philosopher Platform",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/three": "^0.182.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^28.0.0",
    "nodemon": "^3.0.2",
    "sass": "^1.69.5",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "firebase": "^10.7.1",
    "gsap": "^3.12.5",
    "three": "^0.160.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "public/assets/js/**/*.js",
      "public/assets/ts/**/*.ts",
      "!**/node_modules/**"
    ]
  }
}
